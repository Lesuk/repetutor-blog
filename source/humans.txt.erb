<% if data.humans.team %>
/* TEAM */
  <% data.humans.team.each do |member| %>
    <%= "#{member.role.capitalize}: #{member.name}" %>
    <%= "Contact: #{member.contact}" %>
    <%= "From: #{member.from}" %>
  <% end %>
<% end %>

/* THANKS */
<% if data.humans.shoutouts %>
    <% data.humans.shoutouts.each do |shoutout| %>
    <%= "<#{shoutout.name}> -- <#{shoutout.contact}>" %>
  <% end %>
<% end %>

/* SITE */
    Last update: <%= Time.now.strftime("%F") %>
    <%= "Language: #{data.humans.languages.join(", ")}" if data.humans.languages %>
    <%= "Standards: #{data.humans.standards_used.join(", ")}" if data.humans.standards_used %>
    <%= "Components: #{data.humans.components_used.join(", ")}" if data.humans.components_used %>
    <%= "Software: #{data.humans.software_used.join(", ")}" if data.humans.software_used %>
